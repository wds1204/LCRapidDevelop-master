<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/AppBaseTheme"></style>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/window_gray</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>
    <!--首次进入无黑色-->
    <style name="welcomeTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="actionMenuTextColor">#FFF</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextStyle_title_golden">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/text_color_golden</item>
    </style>
    <style name="TextStyle_gray">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/text_color_qianhui</item>
    </style>
</resources>
